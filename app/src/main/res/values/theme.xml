<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthorizationActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/authorizationColorPrimary</item>
        <item name="colorPrimaryDark">@color/authorizationColorPrimaryDark</item>
        <item name="colorAccent">@color/authorizationColorAccent</item>

        <item name="actionBarStyle">@style/AuthorizationActionBarTheme</item>
        <item name="android:windowBackground">@color/authorizationColorPrimary</item>
    </style>

    <style name="ProfileActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AuthorizationActionBarTheme</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="EditProfileActivityTheme" parent="ProfileActivityTheme"/>

    <style name="AuthorizationActionBarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@null</item>
    </style>

</resources>